{
    "name": "roots/wordpress-packager",
    "description": "generates roots/wordpress composer package",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Austin Pray",
            "email": "austin@austinpray.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Roots\\": "src/"
        }
    },
    "scripts": {
        "build": [
            "@composer install --no-dev",
            "bin/build"
        ],
        "phpstan:analyse": "phpstan analyse",
        "test": "phpunit",
        "test:e2e": "phpunit --testsuite E2E",
        "lint": "phpcs",
        "lint:fix": "phpcbf"
    },
    "require": {
        "ext-dom": "*",
        "ext-json": "*",
        "ext-libxml": "*",
        "composer/composer": "^1.8",
        "composer/semver": "^1.5",
        "illuminate/support": "^5.8",
        "masterminds/html5": "^2.6",
        "symfony/css-selector": "^4.3 || ^5.0",
        "symfony/dom-crawler": "^4.3",
        "czproject/git-php": "^3.17",
        "symfony/filesystem": "^4.3",
        "league/uri-schemes": "^1.2",
        "league/uri-components": "^1.8",
        "php": "^7.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.1 || ^9.0",
        "squizlabs/php_codesniffer": "^3.4",
        "phpstan/phpstan-strict-rules": "^0.11.1",
        "phpstan/phpstan": "^0.11.7",
        "mockery/mockery": "^1.2"
    }
}
