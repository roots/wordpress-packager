<?xml version="1.0"?>
<ruleset name="Roots">
  <description>Roots Coding Standards</description>

  <!-- Scan all files in directory -->
  <file>bin/</file>
  <file>src/</file>
  <file>tests/</file>

  <!-- Scan only PHP files -->
  <arg name="extensions" value="php"/>

  <!-- Show colors in console -->
  <arg value="-colors"/>

  <!-- Show progress and sniff codes in all reports; -->
  <arg value="nsp"/>

  <!-- Use PSR-2 and PSR-12 as a base -->
  <rule ref="PSR2"/>
  <rule ref="PSR12"/>
</ruleset>
